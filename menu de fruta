programa
{
	 	
	
	funcao inicio()
	{
		inteiro opcao
		
		escreva("1 Morango \n")
		escreva("2 Melância\n")
		escreva("3 Pitanga\n")
		escreva("4 Uva\n")
		escreva("Escolha uma opção: ")
		leia(opcao)

		limpa()

		escolha (opcao)	
		{
			caso 1: 
		 		escreva ("MilkShake")
		 		pare   
		 	caso 2: 
		 		escreva ("Suco Refrescante!")
		 		pare   
		 	caso 3: 
		 		escreva ("Suco de Polpa!")
		 		pare
		 	caso 4:
		 	escreva("Vinho Tinto")
		 	caso contrario: 
		 		escreva ("Fruta Indisponível !")
		}
	}
}
